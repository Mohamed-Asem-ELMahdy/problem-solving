class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        unordered_set<int>st;
        for(auto x:nums)st.insert(x);
        int i=0;
        int ans=-1;
        for(auto x : nums){
            int cur=x;
            int tmp=0;
            while(st.find(cur)!=st.end()){
                cur++;
                tmp++;
            }
            ans=max(tmp,ans);
        }
        return max(ans,0);
    }
};
